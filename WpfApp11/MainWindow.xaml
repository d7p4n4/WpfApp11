<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF0B0404">
        <StackPanel Background="#FFF32020" Margin="5">
            <TextBox HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" MaxWidth="400" MaxHeight="50" Width="250" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.508,0.609" Margin="0,205,0,-1" Background="#FF0B0606" Foreground="#FFF7F5F5" UndoLimit="130" FontSize="22" />
        </StackPanel>
        <Label Content="Please insert your name!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" FontSize="24" FontWeight="Bold" IsEnabled="False" Background="{x:Null}" Foreground="Black" />
    </Grid>
</Window>
